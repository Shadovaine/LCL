# The name of the command (must match the actual Linux command)
name: fzf

# Category this command belongs to (text_processing, file_management, user_group_mgmt, networking)
category: File_and_Directory_Management
# One-Line description of what the command does
description: Command-line fuzzy finder

# General syntax of the command
syntax: fzf [OPTIONS]...[ARGS]...

# Options: each flag (or set of flags) with an explanation
# Use " flags" as a list if there are multiple aliases (e.g. ["-i", "--ignore-case"])
# Optional: add "arg" if the optin expects a value
options:
  - flag: ["-q <QUERY>"]
    explains: Start with the given query
    arg:  
      name: QUERY    # the placeholder name for the argument
      required: true # true if mandatory, false if optional
  - flag: ["-e"]
    explains: Enable exact-match mode
  - flag: ["--nth <FIELDS>"]
    explains: Comma-separated list of fields to use for matching
    arg:
      name: FIELDS   # the placeholder name for the argument
      required: true # true if mandatory, false if optional
  - flag: ["--delimiter <CHAR>"]
    explains: Use CHAR as the field delimiter
    arg:
      name: CHAR     # the placeholder name for the argument
      required: true # true if mandatory, false if optional
  - flag: ["-m"]
    explains: Enable multi-select mode
  - flag: ["-no-sort"]
    explains: Do not sort the results
  - flag: ["--no-mouse"]
    explains: Disable mouse support
  - flag: ["--height <HEIGHT>"]
    explains: Set the height of the fzf window
    arg:
      name: HEIGHT   # the placeholder name for the argument
      required: true # true if mandatory, false if optional
  - flag: ["--preview <COMMAND>"]
    explains: Command to preview the selected item
    arg:
      name: COMMAND  # the placeholder name for the argument
      required: true # true if mandatory, false if optional
  - flag: ["--preview-window <POSITION>"]
    explains: Position of the preview window (top, bottom, left, right)
    arg:
      name: POSITION  # the placeholder name for the argument
      required: true  # true if mandatory, false if optional  
  - flag: ["--ansi"]
    explains: Enable ANSI color codes
  
# Examples: List of example usages
examples:
  - fzf -q "config"
  - fzf -e
  - fzf --nth 2,3 --delimiter ":"
  - fzf -m
  - fzf --no-sort
  - fzf --no-mouse
  - fzf --height 40%
  - fzf --height 20 --preview "cat {}"
  - fzf --preview-window right
  - fzf --ansi